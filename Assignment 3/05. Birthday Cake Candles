#include <bits/stdc++.h>
using namespace std;

int main(){
    int a[100000],max=0,count=0,n;
    cin>>n;
    
    for(int i=0; i<n; i++){
        cin>>a[i];
        if(a[i]>=max){
            max=a[i];
        }
    }
    for(int i=0; i<n; i++){
        cin>>a[i];
        if(a[i]==max){
            count++;
        }
    }
    cout<<count;
}
